.pull-right
  =link_to "Cancel", :users, class: "btn btn-default"

%h1 New user

=simple_form_for @form, as: :form, url: :users, html: {class: "form-horizontal"} do |f|
  =f.input :firstname, as: :string
  =f.input :lastname, as: :string
  =f.input :email, as: :string
  =f.input :password, as: :string
  =f.submit "Submit", class: "btn btn-primary submit"
